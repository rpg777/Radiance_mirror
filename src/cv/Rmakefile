# SCCSid "$SunId$ LBL"

#
# Makefile for conversion programs
#

OPT = -O

MACH = -f68881 /usr/lib/libm.il -DBSD

CFLAGS = $(OPT) $(MACH)

INSTDIR = /lumen/lumen/ray/bin.sun3

LIBDIR = /lumen/lumen/ray/lib

PROGS = thf2rad ies2rad arch2rad nff2rad lampcolor

all:	$(PROGS)

install:	$(PROGS)
	cp $(PROGS) $(INSTDIR)

clean:
	set nonomatch; rm -f $(PROGS) *.o core

thf2rad:	thf2rad.o
	cc $(CFLAGS) -o thf2rad thf2rad.o

ies2rad:	ies2rad.o lamps.o spec_rgb.o fropen.o rexpr.o
	cc $(CFLAGS) -o ies2rad ies2rad.o lamps.o \
spec_rgb.o fropen.o rexpr.o

arch2rad:	arch2rad.o trans.o savestr.o
	cc $(CFLAGS) -o arch2rad arch2rad.o trans.o savestr.o

nff2rad:	nff2rad.o
	cc $(CFLAGS) -o nff2rad nff2rad.o

lampcolor:	lampcolor.o lamps.o spec_rgb.o fropen.o rexpr.o
	cc $(CFLAGS) -o lampcolor lampcolor.o spec_rgb.o \
lamps.o fropen.o rexpr.o

fropen.o:	fropen.c
	cc $(CFLAGS) -DDEFPATH=\":$(LIBDIR)\" -c fropen.c

arch2rad.o trans.o:	trans.h

ies2rad.o spec_rgb.o:	color.h
