# SCCSid "$SunId$ LBL"

#
# Makefile for conversion programs
#

OPT = -O

MACH = -f68881 /usr/lib/libm.il -DBSD

CFLAGS = $(OPT) $(MACH) -I../common

INSTDIR = /lumen/lumen/ray/bin.sun3

LIBDIR = /lumen/lumen/ray/lib

PROGS = thf2rad ies2rad arch2rad nff2rad lampcolor

all:	$(PROGS)

install:	$(PROGS) source.cal tilt.cal
	cp $(PROGS) $(INSTDIR)
	rm -f $(LIBDIR)/source.cal $(LIBDIR)/tilt.cal
	cp source.cal tilt.cal $(LIBDIR)

clean:
	set nonomatch; rm -f $(PROGS) *.o core

thf2rad:	thf2rad.o
	cc $(CFLAGS) -o thf2rad thf2rad.o

ies2rad:	ies2rad.o
	cc $(CFLAGS) -o ies2rad ies2rad.o ../common/librt.a

arch2rad:	arch2rad.o trans.o
	cc $(CFLAGS) -o arch2rad arch2rad.o trans.o ../common/librt.a

nff2rad:	nff2rad.o
	cc $(CFLAGS) -o nff2rad nff2rad.o

lampcolor:	lampcolor.o
	cc $(CFLAGS) -o lampcolor lampcolor.o ../common/librt.a

arch2rad.o trans.o:	trans.h

ies2rad.o spec_rgb.o:	../common/color.h
